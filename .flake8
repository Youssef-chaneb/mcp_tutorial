[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = .git,__pycache__,.venv,build,dist
per-file-ignores =
    # Allow imports in __init__.py files
    __init__.py:F401
    # Allow unused imports in conftest.py
    conftest.py:F401
    # Ignore missing docstrings in tests
    tests/*:D100,D101,D102,D103
